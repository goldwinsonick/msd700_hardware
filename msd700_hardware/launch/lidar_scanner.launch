<launch>
    <arg name="frame_id"            default="base_link" />
    <arg name="serial_port"         default="/dev/rplidar" />
    <arg name="serial_baudrate"     default="115200" />
    <arg name="angle_compensate"    default="True" />
    <arg name="inverted"            default="False" />
    <arg name="max_distance"        default="10.0" />
    <arg name="scan_mode"           default="Standard" />

    <!-- Launch RPLIDAR node -->
    <node pkg="rplidar_ros" type="rplidarNode" name="rplidarNode" output="screen">
        <param name="serial_port" value="/dev/rplidar" />
        <param name="serial_baudrate" value="115200" />
        <param name="angle_compensate" value="True" />
        <param name="frame_id" value="$(arg frame_id)" />
        <param name="inverted" value="False" />
        <param name="max_distance" value="10.0" />
        <param name="scan_mode" value="Standard" />
    </node>
</launch>